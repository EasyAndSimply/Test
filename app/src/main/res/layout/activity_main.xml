<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.home.logpastest.MainActivity">

    <Button
        android:id="@+id/enterBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Вход"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="369dp"
        android:layout_marginBottom="92dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/nameMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="77dp"
        android:layout_marginLeft="138dp"
        android:layout_above="@+id/passMain"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp" />

    <EditText
        android:id="@+id/passMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="155dp"
        android:layout_marginLeft="138dp"
        android:layout_above="@+id/registerTV"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp" />

    <TextView
        android:id="@+id/registerTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="246dp"
        android:layout_above="@+id/enterBTN"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/registerTV"
        android:layout_alignStart="@+id/passMain"
        android:layout_marginBottom="23dp"
        android:layout_marginStart="14dp"
        android:text="CheckBox" />
</RelativeLayout>
